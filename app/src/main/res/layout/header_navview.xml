<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_drawer_layout"
    android:layout_height="@dimen/header_navview_height"
    android:padding="@dimen/header_padding_left"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        />

    <!-- Nombre de usuario-->
    <TextView
        android:id="@+id/txv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txv_user"
        android:textStyle="bold"
        />

    <!-- Correo del usuario -->
    <TextView
        android:id="@+id/txv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txv_email"
        />

</LinearLayout>